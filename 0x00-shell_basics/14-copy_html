#!/bin/bash

# Get the current working directory
current_dir=$(pwd)

# Get the parent directory
parent_dir=$(dirname "$current_dir")

# Get a list of all HTML files in the current directory
html_files=$(find "$current_dir" -name "*.html")

# Loop through the HTML files
for html_file in $html_files; do

  # Get the full path to the HTML file
  full_path="$current_dir/$html_file"

  # Check if the HTML file exists in the parent directory
  parent_path="$parent_dir/$html_file"
  if [ ! -f "$parent_path" ]; then

    # The HTML file does not exist in the parent directory, so copy it
    cp "$full_path" "$parent_path"

  elif [ "$full_path" -nt "$parent_path" ]; then

    # The HTML file exists in the parent directory, but it is older than the version in the current directory, so overwrite it
    cp "$full_path" "$parent_path"

  fi

done.
